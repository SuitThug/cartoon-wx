/* pages/user/index.wxss */
.header {
    width: 90vw;
    height: 300rpx;
    /* background-color: red; */
    margin: 0 auto;
    position: relative;
    margin-top: 30rpx;
}

.header image {
    width: 100%;
    height: 300rpx;
    z-index: -1;
}

.header_ben {
    width: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);

}

.header_ben .btn {
    width: 250rpx;
    margin: 0 40rpx;
    color: red;
}

.header_userinfo {
    width: 50%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.header_userinfo image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.header_userinfo view {
    color: #ffffff;
}

.reg_info {
    float: right;
    margin-top: 20rpx;
    margin-right: 50rpx;
    font-size: 30rpx;
    color: #cccccc;
}

.submitBtn {
    width: 500rpx !important;
    height: 100rpx !important;
    margin-top: 80rpx;
    font-size: 30rpx !important;
}

.logoutBtn {
    margin-top: 80rpx;
}