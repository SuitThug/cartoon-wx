/* pages/read/index.wxss */

.history-item {
    height: 300rpx;
    display: flex;
    color: #909090;
    font-size: 30rpx;
    line-height: 70rpx;
    border-top: 1px solid #EBEBEB;
    margin: 20rpx 25rpx;
    padding: 30rpx 0;
}

.history-right {
    flex: 1;
    margin-left: 20rpx;
}
.history-right .author{
    width:460rpx;
    text-overflow: ellipsis;/*省略号*/
    overflow: hidden;/*超出隐藏*/
    white-space: nowrap;
 
}

.history-item image {
    width: 220rpx;
    height: 300rpx;
    border-radius: 10rpx;
  
}
.rank-1 {
    position: absolute;
    font-size: 14px;
    color: #FFFFFF;
    letter-spacing: 0;
    height: 18px;
    width: 18px;
    line-height: 18px;
    text-align: center;
    border-radius: 4px 0 4px 0;
    top:0rpx;
    right:0;
    background-color: #FA684B;
}
.right_title {
    font-size: 40rpx;
    color: #121212;
}

.description {
    width: 100%;
    height: 150rpx;
    line-height: 50rpx;
    display: -webkit-box;/*将文本看做一行*/
    -webkit-box-orient: vertical;/*设置为垂直方向*/
    text-overflow: ellipsis;/*省略号*/
    overflow: hidden;/*超出隐藏*/
    /*限制行数*/
    -webkit-line-clamp: 3;

}